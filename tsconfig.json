{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "build",
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true
  }
}